{
    "openapi": "3.0.0",
    "info": {
        "title": "API NextClass",
        "description": "API do sistema NextClass",
        "version": "1.0.0"
    },
    "paths": {
        "/api/sessions": {
            "get": {
                "tags": [
                    "Sessões"
                ],
                "summary": "Listar sessões ativas do usuário autenticado",
                "operationId": "f4b560641072155d2baf3505a66950e3",
                "responses": {
                    "200": {
                        "description": "Lista de sessões",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Session"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Sessões"
                ],
                "summary": "Criar nova sessão (login)",
                "operationId": "e0239d388b5f8231ddec4b8fd666e4f8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "matheus@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "senha123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sessão criada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SessionTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Credenciais inválidas"
                    }
                }
            }
        },
        "/api/sessions/{id}": {
            "get": {
                "tags": [
                    "Sessões"
                ],
                "summary": "Exibir detalhes de uma sessão",
                "operationId": "6f147a1ba4c30056a7a9347d1e220b5e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da sessão",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Dados da sessão",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Session"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Sessão não encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Sessões"
                ],
                "summary": "Deletar sessão específica",
                "operationId": "688effea4e6581b82158b56a7932e560",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da sessão",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sessão deletada"
                    },
                    "404": {
                        "description": "Sessão não encontrada"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/sessions/revoke": {
            "post": {
                "tags": [
                    "Sessões"
                ],
                "summary": "Revogar sessão atual",
                "operationId": "d18b9843ba38d632d01b45ae43d32017",
                "responses": {
                    "200": {
                        "description": "Sessão atual revogada"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/users": {
            "get": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Listar todos os usuários",
                "description": "Retorna a lista de usuários cadastrados",
                "operationId": "42cef9ac0730078cef1a8c64e23c10e7",
                "responses": {
                    "200": {
                        "description": "Lista de usuários"
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Criar um novo usuário",
                "description": "Cria um novo usuário com validação de CPF",
                "operationId": "267776bdcbff289d694bdc08312e396f",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "cpf",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Foo Bar"
                                    },
                                    "cpf": {
                                        "type": "string",
                                        "example": "987.654.321-00"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "maxLength": 255,
                                        "example": "foo.bar@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "minLength": 8,
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "minLength": 8,
                                        "example": "password"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuário criado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Foo Bar"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "foo.bar@example.com"
                                        },
                                        "cpf": {
                                            "type": "string",
                                            "example": "987.654.321-00"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erro de validação",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/{id}": {
