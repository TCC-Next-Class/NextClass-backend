        },
        "/api/users/search": {
            "get": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Buscar usuário pelo e-mail",
                "description": "Verifica se um usuário existe a partir do e-mail e retorna dados públicos (nome, avatar, etc.)",
                "operationId": "f07f313e9550d88832db224125b9a323",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "E-mail do usuário a ser pesquisado",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "email",
                            "example": "john.doe@example.com"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuário encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "user": {
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "email": {
                                                    "type": "string",
                                                    "format": "email",
                                                    "example": "john.doe@example.com"
                                                },
                                                "avatar": {
                                                    "type": "string",
                                                    "example": "https://cdn.example.com/avatars/12.png"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "title": "Usuário",
                "required": [
                    "id",
                    "name",
                    "email",
                    "cpf"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Matheus Lopes"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "matheus@example.com"
                    },
                    "cpf": {
                        "type": "string",
                        "example": "123.456.789-00"
                    }
                },
                "type": "object"
            },
            "Session": {
                "title": "Sessão",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "device_name": {
                        "type": "string",
                        "example": "PC Desktop"
                    },
                    "device_ip": {
                        "type": "string",
                        "example": "192.168.0.100"
                    },
                    "device_agent": {
                        "type": "string",
                        "example": "Mozilla/5.0"
                    }
                },
                "type": "object"
            },
            "SessionTokenResponse": {
                "title": "Resposta da criação de sessão",
                "properties": {
                    "access_token": {
                        "type": "string",
                        "example": "01994a21-8e00-7047-bc50-635f6f9262e6|N1E5DKLXjnApDw5ckFaTgRAIEwxs7uu2yaeQWE4X57d9263e"
                    },
                    "access_token_expires_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-09-10T16:00:00Z",
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Sessões",
            "description": "Sessões"
        },
        {
            "name": "Usuários",
            "description": "Usuários"
        }
    ],
    "security": [
        {
