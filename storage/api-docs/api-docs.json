        "/api/me": {
            "get": {
                "tags": [
                    "Usuários"
                ],
                "summary": "Obter informações do usuário autenticado",
                "operationId": "d09b8e0a48be5f1882d82827c69ed059",
                "responses": {
                    "200": {
                        "description": "Dados do usuário autenticado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado"
                    }
                },
                "security": [
                    {
